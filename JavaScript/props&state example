onst App = (props) => {
  const [value, setValue] = useState(10)

  const handleClick = () =>
    console.log('clicked the button')                 //tässä ei käytetä funktion aaltosulkeellista muotoa, koska suoritettavana on vain yksi rivi koodia

  return (
    <div>
      {value}
      <button onClick={handleClick}>button</button>   //tässä viite funktioon handleclick
    </div>
  )
}




//Ajaessa App-koodi luo useStatehookin avulla sovellukselle tilan counter

const App = (props) => {
  const [ counter, setCounter ] = useState(0)                    //renderöidään tilan alkuarvoksi 0

  const increaseByOne = () => setCounter(counter + 1)            //laskurin arvoa muuttavat tapahtumankäsittelijät
  const decreaseByOne = () => setCounter(counter - 1)  
  const setToZero = () => setCounter(0)

  return (
    <div>
      <Display counter={counter}/>
      <Button        handleClick={increaseByOne}        text='plus'      />      
      <Button        handleClick={setToZero}        text='zero'      />           
      <Button        handleClick={decreaseByOne}        text='minus'      />             
   </div>
  )
}


const Button = (props) => {
  return (
    <button onClick={props.handleClick}>                         //napit saa propseina tilaa muuttavat tapahtumankäsittelijät
      {props.text}
    </button>
  )
}
  
const Button = ({ handleClick, text }) => (                      //parempi esitystapa buttonista
  <button onClick={handleClick}>
    {text}
  </button>
)

const Display = ({ counter }) => {                               //displaylle lähetetään propseina laskurin arvon
  return (                                                       //propsien asetus on destrukturoitu yksinkertaisempaan muotoon
    <div>{counter}</div>                                         
  )
}
//voidaan esittää myös paremmin --> 

const Display = ({ counter }) => <div>{counter}</div>



EXTENDED
const App = (props) => {
  const [ counter, setCounter ] = useState(0)                    

  const increaseByOne = () => setCounter(counter + 1)            
  const decreaseByOne = () => setCounter(counter - 1)  
  const setToZero = () => setCounter(0)

  return (
    <div>
      <Display counter={counter}/>
      <Button        handleClick={increaseByOne}        text='plus'      />      
      <Button        handleClick={setToZero}        text='zero'      />           
      <Button        handleClick={decreaseByOne}        text='minus'      />             
   </div>
  )
}

const History = (props) => {                             //lisättiin kompomemtti history, joka vastaa painallushistorian näyttämisestä
  if (props.allClicks.length === 0) {                    //käytetään ehdollista renderöintiä valitsemaan tulostus
    return (
      <div>
        the app is used by pressing the buttons
      </div>
    )
  }

  return (
    <div>
      button press history: {props.allClicks.join(' ')}   //tehdään taulukosta merkkijono, jonka arvot erotetaan tyhjällä välillä
    </div>
  )
}

const Button = ({ handleClick, text }) => (  <button onClick={handleClick}>    {text}  </button>)
const App = () => {
  const [left, setLeft] = useState(0)
  const [right, setRight] = useState(0)
  const [allClicks, setAll] = useState([])           // luodaan tyhjä taulukko allclicks, johon tallennetaan kaikki painallukset

  const handleLeftClick = () => {
    setAll(allClicks.concat('L'))
    setLeft(left + 1)
  }

  const handleRightClick = () => {
    setAll(allClicks.concat('R'))
    setRight(right + 1)
  }

  return (
    <div>
      <div>
        {left}
        <Button handleClick={handleLeftClick} text='left' />       
        <Button handleClick={handleRightClick} text='right' />        {right}
        <History allClicks={allClicks} />
      </div>
    </div>
  )
}



